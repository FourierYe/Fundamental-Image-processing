function x = my_quick_sort(x, left_index, right_index)

if left_index >= right_index
    x = x(left_index);
    return;
end

base = x(left_index);

while left_index < right_index
    
    while left_index < right_index && x(righ_index) > base 
        right_index = right_index + 1 ;
    end
   
    while left_index < right_index && x(left_index) < base 
        left_index = left_index - 1;
    end
    
    temp = x(left_index);
    x(left_index) = x(right_index);
    x(right_index) = temp;
    
end

x(original_left) = x(left_index-1);
x(left_index - 1) = base;

x(original_left : left_index) = my_quick_sort(x, original_left, left_index);
x(right_index : original_right) = my_quick_sort(x, right_index, original_right);
end